<div class="container">
  <h1>Game</h1>
    <ul>
      <% @grid.each do |letter| %>
        <p class="letter"><%= letter.capitalize %></p>
      <% end %>
    </ul>
    <p>What is the longest word you can find?</p>
    <form action="score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <%= hidden_field_tag :start_time, @start_time %>
      <input type="text" name="attempt" class="textbox">
      <input type="submit" class="btn" value="Play">
  </form>
</div>
